[global/wm]

[bar/mybar]
fixed-center = true
height = 18
background = #111111
foreground = #6A6A6A
spacing = 2
module-margin = 2
font-0 = "Diavlo_BOOK_II_37 Custom:size=9;2"
font-1 = "Siji:size=20;1"
modules-left = workspaces
modules-right = battery backlight pulseaudio date

wm-restack = bspwm

[module/date]
type = internal/date
interval = 1.0
time = %H:%M
time-alt = %d %b
format = <label>
label = %time%

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
format =bri: <label>
label = %percentage%%


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 5
format-volume = vol: <label-volume>
format-muted = muted
label-volume = %percentage%%


[module/workspaces]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = true
reverse-scroll = true
format = <label-state>
label-monitor = %name%
label-focused =
label-focused-foreground = #FFFFFF
label-focused-padding = 1
label-occupied =
label-occupied-foreground = #6A6A6A
label-occupied-padding = 1
label-empty =
label-empty-foreground = #6A6A6A
label-empty-padding = 1
label-urgent =
label-urgent-foreground = #FFFFFF
label-urgent-padding = 1


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP0
poll-interval = 5
label-charging = charging: %percentage%%
label-discharging = bat: %percentage%%
label-full = fully charged

