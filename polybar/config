[global/wm]

[bar/mybar]
fixed-center = true
height = 24
background = #161616
foreground = #b9b9b9
spacing = 3
module-margin = 3
font-0 = "Diavlo_BOOK_II_37 Custom:size=10;2"
font-1 = "Siji:size=20;1"
modules-left = workspaces
modules-center = cpu nvidia ram
modules-right = backlight pulseaudio battery date
bottom = true


wm-restack = bspwm


[module/cpu]
type = internal/cpu
interval = 0.5
warn-percentage = 95
format = <label>
label = cpu: %percentage%%


[module/ram]
type = internal/memory
interval = 3
warn-percentage = 95
format = <label>
label = ram: %gb_used%


[module/nvidia]
type = custom/script
exec = ~/.config/polybar/nvidia.sh
interval = 10


[module/date]
type = internal/date
interval = 1.0
time = %H:%M
time-alt = %d %b
format = <label>
label = %time%


[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
format =bri: <label>
label = %percentage%%


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 5
format-volume = vol: <label-volume>
format-muted = muted
label-volume = %percentage%%


[module/workspaces]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = true
reverse-scroll = true
format = <label-state>
label-monitor = %name%
label-focused =
label-focused-foreground = #b9b9b9
label-focused-padding = 1
label-occupied =
label-occupied-foreground = #747474
label-occupied-padding = 1
label-empty =
label-empty-foreground = #747474
label-empty-padding = 1
label-urgent =
label-urgent-foreground = #ffffff
label-urgent-padding = 1


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP0
poll-interval = 5
label-charging = charging: %percentage%%
label-discharging = bat: %percentage%%
label-full = fully charged
label-padding = 3
